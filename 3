// Definición de la clase Formulas
function Formulas() {
  // Método para sumar dos números enteros
  this.sumar = function (entero1, entero2) {
    if (Number.isInteger(entero1) && Number.isInteger(entero2)) {
      return entero1 + entero2;
    } else {
      console.log("Ambos argumentos deben ser números enteros.");
      return null;
    }
  };

  // Método para generar una secuencia Fibonacci de una cierta cantidad de números
  this.fibonacci = function (cantidad) {
    if (cantidad <= 0) {
      return [];
    } else if (cantidad === 1) {
      return [0];
    } else if (cantidad === 2) {
      return [0, 1];
    } else {
      const secuencia = [0, 1];
      for (let i = 2; i < cantidad; i++) {
        const nuevoNumero = secuencia[i - 1] + secuencia[i - 2];
        secuencia.push(nuevoNumero);
      }
      return secuencia;
    }
  };

  // Método para encontrar los números que tienen residuo 0 al dividir entre cierta cantidad
  this.operacion_modulo = function (cantidad, divisor) {
    if (cantidad <= 0 || divisor === 0) {
      console.log("La cantidad debe ser positiva y el divisor no puede ser cero.");
      return [];
    } else {
      const numerosConResiduoCero = [];
      for (let i = 1; i <= cantidad; i++) {
        if (i % divisor === 0) {
          numerosConResiduoCero.push(i);
        }
      }
      return numerosConResiduoCero;
    }
  };

  // Método para encontrar números primos hasta cierta cantidad
  this.primos = function (cantidad) {
    if (cantidad <= 0) {
      console.log("La cantidad debe ser positiva.");
      return [];
    } else {
      const numerosPrimos = [];
      for (let i = 2; numerosPrimos.length < cantidad; i++) {
        if (esPrimo(i)) {
          numerosPrimos.push(i);
        }
      }
      return numerosPrimos;
    }
  };

  // Función auxiliar para verificar si un número es primo
  function esPrimo(numero) {
    if (numero <= 1) {
      return false;
    }
    for (let i = 2; i <= Math.sqrt(numero); i++) {
      if (numero % i === 0) {
        return false;
      }
    }
    return true;
  }
}

// Crear una instancia de Formulas
const calculadora = new Formulas();

// Ejemplos de uso de los métodos
console.log("Suma de 5 y 3:", calculadora.sumar(5, 3));
console.log("Secuencia Fibonacci de 7 números:", calculadora.fibonacci(7));
console.log("Números con residuo 0 al dividir entre 4 hasta 20:", calculadora.operacion_modulo(20, 4));
console.log("Primeros 10 números primos:", calculadora.primos(10));
