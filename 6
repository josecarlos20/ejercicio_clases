const Contador = {
  valor: 0,

  reset: function () {
    this.valor = 0;
  },

  inc: function () {
    this.valor++;
  },

  dec: function () {
    this.valor--;
  },

  // Método para obtener el valor actual o establecer un nuevo valor
  valorActual: function (nuevoValor) {
    if (typeof nuevoValor === 'number') {
      this.valor = nuevoValor;
    }
    return this.valor;
  }
};

Contador.valorActual(10);
Contador.inc();
Contador.inc();
Contador.dec();
Contador.inc();
console.log("Valor actual del contador:", Contador.valorActual()); // Debería mostrar 12

